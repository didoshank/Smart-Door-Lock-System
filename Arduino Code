/* Comment this out to disable prints and save space */
/#define BLYNK_PRINT SwSerial/


#include <SoftwareSerial.h>
#include <Keypad.h>
#include <Servo.h>

#include <BlynkSimpleStream.h>


SoftwareSerial SwSerial(10, 11); // RX, TX
char auth[] = "EnterYourBlynkAuthToken";

const int ROW_NUM = 4; //four rows
const int COLUMN_NUM = 4; //three columns


 
char keys[ROW_NUM][COLUMN_NUM] = {
  {'1','2','3','A'},
  {'4','5','6','B'},
  {'7','8','9','C'},
  {'*','0','#','D'}
};

byte pin_rows[ROW_NUM] = {11,10,9,8}; //connect to the row pinouts of the keypad
byte pin_column[COLUMN_NUM] = {7,6,5,4}; //connect to the column pinouts of the keypad

Keypad keypad = Keypad( makeKeymap(keys), pin_rows, pin_column, ROW_NUM, COLUMN_NUM );


// You should get Auth Token in the Blynk App.
// Go to the Project Settings (nut icon).
const String password = "1234"; // change your password here

String  input_password ;


  

WidgetLCD lcd(V1);
Servo servo;

BLYNK_WRITE(V3)//tO CONTROL SERVO MOTOOR USING SLIDER
{
  servo.write(param.asInt());
}

void setup()
{
  
  // Debug console
  SwSerial.begin(9600);
   input_password.reserve(32); // maximum input characters is 33, change if needed
   pinMode(2, OUTPUT);
   servo.attach(3);

  // Blynk will work through Serial
  // Do not read or write this serial manually in your sketch
  Serial.begin(9600);
  Blynk.begin(Serial, auth);
  
  
}

void loop()
{
  

  Blynk.run();
  realkey();//fUNCTION CONTROLLING BOTH KEYPAD AND BBUZZER
  
}

void realkey()
{
  
  char key = keypad.getKey();
  
  lcd.clear();
  lcd.print(0,0,"Enter the ");
  lcd.print(0,1,"Password");
  delay(200);
  lcd.clear();
  
  
  if (key)
  {
    
    lcd.print(4,0, key - 48);
    delay(250);

    if(key == '*') 
    {
      input_password = ""; // clear input password
    } 
     else if(key == '#') 
    {
      if(input_password == password ) 
      {
         // myservo.write(180);
   
        digitalWrite(2,HIGH);
        delay(200);
        digitalWrite(2,LOW);
        delay(200);
        lcd.clear();
        lcd.print(0, 0, "Correct Password");
        lcd.print(0, 1, "DoorisOpening");
        delay(2000);
        lcd.clear();
        input_password = ""; 
        
        
      }
      
      else 
      {
        lcd.clear();
        digitalWrite(2,HIGH);
        delay(1000);
        digitalWrite(2,LOW);
        delay(1000);
        
        lcd.print(0, 0, "Wrong Password");
        lcd.print(0, 1, "Try Again");
        delay(2000);
        lcd.clear();
        lcd.clear();
        input_password = ""; 
     }
     input_password = ""; 
    
    }
    else 
    {
      input_password += key; // append new character to input password string
    }
  }
}
